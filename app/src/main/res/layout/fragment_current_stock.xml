<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.fragments.CurrentStockDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="@dimen/default_16dp_margin"
        android:paddingLeft="@dimen/default_16dp_margin"
        android:paddingRight="@dimen/default_16dp_margin"
        android:paddingStart="@dimen/default_16dp_margin"
        android:paddingTop="@dimen/default_16dp_margin">

        <TextView
            android:id="@+id/tv_stock_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/stock_details_label"
            android:contentDescription="@string/stock_details_label"
            android:textColor="@color/primary_text"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <com.sam_chordas.android.stockhawk.utils.NonScrollableListView
            android:id="@+id/non_scrollable_stock_details_list"
            android:layout_width="match_parent"
            android:divider="@color/divider"
            android:layout_height="wrap_content"
            android:dividerHeight="2dp"
            android:layout_gravity="center_horizontal">

        </com.sam_chordas.android.stockhawk.utils.NonScrollableListView>


    </LinearLayout>
</ScrollView>
