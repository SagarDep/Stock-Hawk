<resources>

  <!-- Base application theme. -->
  <style name="AppTheme"
      parent="Theme.AppCompat">
    <item name="colorPrimary">@color/material_purple</item>
    <item name="colorPrimaryDark">@color/material_purple_dark</item>
    <item name="android:windowBackground">@color/backgr</item>
    <item name="colorAccent">@color/material_color_accent</item>
    <item name="android:colorBackground">@android:color/black</item>
    <item name="android:colorForeground">@android:color/white</item>
    <!-- Customize your theme here. -->
  </style>

  <style name="ToolBarStyle">
    <item name="android:background">@color/material_purple_dark</item>
  </style>

  <style name="PercentChangeTextStyle">
    <item name="android:textSize">20sp</item>
    <item name="android:textColor">#FFF</item>
    <item name="android:textStyle">bold</item>
  </style>
  <style name="BidPriceTextStyle">
    <item name="android:textColor">@color/material_purple</item>
    <item name="android:textSize">20sp</item>
  </style>
  <style name="StockSymbolTextStyle">
    <item name="android:textColor">@color/material_purple</item>
    <item name="android:textSize">25sp</item>
    <item name="android:textAllCaps">true</item>
  </style>

</resources>
